<Window x:Class="OoadProject.Core.Test.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OoadProject.Core.Test.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{StaticResource HomeViewModel}">
    <StackPanel>
        <StackPanel>
            <TextBlock>Hôm nay</TextBlock>
            <TextBlock>Doanh số</TextBlock>
            <TextBlock Text="{Binding TodayRevenue.Sales}"></TextBlock>
            <TextBlock>Doanh thu</TextBlock>
            <TextBlock Text="{Binding TodayRevenue.Revenue}"></TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Tháng này</TextBlock>
            <TextBlock>Doanh số</TextBlock>
            <TextBlock Text="{Binding MonthRevenue.Sales}"></TextBlock>
            <TextBlock>Doanh thu</TextBlock>
            <TextBlock Text="{Binding MonthRevenue.Revenue}"></TextBlock>
        </StackPanel>
        
    </StackPanel>
</Window>
